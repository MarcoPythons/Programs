        <Label Content="RUT" HorizontalAlignment="Left" Margin="748,20,0,0" VerticalAlignment="Top" Width="118" FontWeight="Bold" FontFamily="Arial" Controls:ControlsHelper.ContentCharacterCasing="Upper" Foreground="Snow">
