            <RadialGradientBrush>
                <GradientStop Color="#FF3A00FF" Offset="1"/>
                <GradientStop Color="#FF0017FF"/>
            </RadialGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
