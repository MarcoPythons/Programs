            <DataGrid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF3A00FF" Offset="1"/>
                    <GradientStop Color="#FF0017FF"/>
                </LinearGradientBrush>
            </DataGrid.Background>
        </DataGrid>
